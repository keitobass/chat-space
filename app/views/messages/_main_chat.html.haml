.chat-main
  .chat-main__group-info
    .group-info-box
      %ul.group-info-leftbox
        %li.group-info-leftbox__name
          = @group.name
        %li.group-info-leftbox__member
          Member :
          - @group.users.each do |user|
            = user.name
      = link_to edit_group_path(@group), class: "chat-main__group-info--edit" do
        Edit

  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form-box"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__inputText', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image')
          = f.file_field :image
      = f.submit 'Send', class: 'Form-box__submit'