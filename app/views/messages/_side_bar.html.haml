.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        = link_to new_group_path, class: "top-items__icon--edit" do
          = icon('far', 'edit',  class: "top-items__icon--coler")
        = link_to edit_user_path(current_user), class: "top-items__icon--cog" do
          = icon('fa', 'cog',  class: "top-items__icon--coler")

  .side-bar__group-list
    - current_user.groups.each do |group|
      %ul.group
        = link_to group_messages_path(group) do
          %li.group__name 
            = group.name
          %li.group__message 
            = group.show_last_message



